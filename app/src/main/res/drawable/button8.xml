<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00c9ff" />
            <gradient android:angle="0" android:startColor="#cb2d3e" android:endColor="#ef473a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20px" />
            <stroke android:width="1dip" android:color="#00c9ff" />
            <solid android:color="#00c9ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#00FFFFFF" />
            <gradient android:angle="90" android:startColor="#65272B3A"  android:endColor="#252937" />
        </shape>
    </item>
</selector>