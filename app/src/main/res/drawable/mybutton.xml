<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="13dip" />
        <stroke android:width="1dip" android:color="#CFCFCF" />
        <gradient android:angle="0" android:startColor="#42168A" android:endColor="#8237B6"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="20px" />
        <stroke android:width="1dip" android:color="#00c9ff" />
        <solid android:color="#00c9ff"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="13dip" />
        <stroke android:width="1dip" android:color="#00FFFFFF" />
        <gradient android:angle="180" android:startColor="#C5CED5"  android:endColor="#E8EAF6" />
    </shape>
</item>
</selector>