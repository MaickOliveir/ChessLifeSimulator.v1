<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".candidatoMestre">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30px">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button8"
                android:gravity="center"
                android:text="@string/candidato_mestre"
                android:textColor="#ECECEC"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="269dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/certificado1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button8"
                android:gravity="center"
                android:padding="20px"
                android:text="@string/candidato_bemvindo"
                android:textColor="#ECECEC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button99"
                android:layout_width="286dp"
                android:layout_height="53dp"
                android:background="@drawable/buttnb4"
                android:text="@string/avancar"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="416dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>