<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qualificacao1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbarThumbVertical="@null"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30px">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="411dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/logo2" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button9"
                android:gravity="center"
                android:text="Rating: 0"
                android:textSize="18sp" />


            <TextView
                android:layout_width="250dp"
                android:layout_height="42dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button9"
                android:gravity="center"
                android:text="@string/amador"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button8"
                android:gravity="center"
                android:padding="20px"
                android:text="@string/intro1"
                android:textColor="#ECECEC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button97"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttnb4"
                android:text="@string/candidato_mestre"
                android:textColor="#FFEBEE" />

            <Button
                android:id="@+id/button100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mybutton"
                android:text="@string/mestre_fydi"
                android:textColor="#323131" />

            <Button
                android:id="@+id/button101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mybutton"
                android:text="@string/mestre_internacional"
                android:textColor="#323131" />

            <Button
                android:id="@+id/button102"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mybutton"
                android:text="@string/grande_mestre"
                android:textColor="#323131" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>