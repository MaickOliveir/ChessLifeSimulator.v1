<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".menuRoad">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbarThumbVertical="@null"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button9"
                    android:gravity="center"
                    android:text="Rating: 1400"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="28dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/uparrow" />


            </LinearLayout>

            <TextView
                android:layout_width="250dp"
                android:layout_height="42dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/button9"
                android:gravity="center"
                android:text="Titulação: Amador"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:background="@drawable/button8"
                android:gravity="center"
                android:text="CANDIDATO A MESTRE"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Torneio Interescolar"
                android:textSize="24sp" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_3"
                android:src="@drawable/escolar_mini" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Torneio Municipal"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButton999"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttnb4"
                android:clickable="true"
                android:src="@drawable/estadual_trofeu_mini" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Torneio Estadual"
                android:textSize="24sp" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@drawable/mybutton"
                android:clickable="true"
                android:src="@drawable/municipal_trofeu_mini" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>