<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".escolar_bemVindo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@null"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="724dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="325dp"
            android:layout_height="61dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button8"
            android:gravity="center"
            android:padding="10px"
            android:text="TORNEIO INTERSCOLAR"
            android:textColor="#ECECEC"
            android:textSize="22sp" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/interescolar1" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button8"
            android:gravity="center"
            android:padding="20px"
            android:text="O torneio interescolar geralmente conta com adversários fracos a medianos. O rating Elo dos jogadores varia de 1000 a 1400 pontos de rating Elo."
            android:textColor="#ECECEC"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="283dp"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttnb4"
            android:text="avançar"
            android:textColor="#E0F2F1"
            android:textSize="18sp"/>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>