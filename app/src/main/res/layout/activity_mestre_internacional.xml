<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mestreInternacional">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbarThumbVertical="@null"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30px">


            <TextView
                android:layout_width="389dp"
                android:layout_height="74dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button8"
                android:gravity="center"
                android:text="MESTRE INTERNACIONAL - MI"
                android:textColor="#ECECEC"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="354dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/internationalmaster" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button8"
                android:gravity="center"
                android:padding="20px"
                android:text="Em geral, uma norma de MI é definida como uma classificação de desempenho de pelo menos 2.450 pontos em 9 ou mais jogos e deve incluir pelo menos três Mestres Internacionais ou Grandes Mestres. Porém é possível ganhá-la de outras formas, uma delas é ganhando o Campeonato Mundial Junior (U- 16)."
                android:textColor="#ECECEC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button67"
                android:layout_width="286dp"
                android:layout_height="53dp"
                android:background="@drawable/buttnb4"
                android:text="avançar"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="416dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>